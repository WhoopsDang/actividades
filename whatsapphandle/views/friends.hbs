<h1 class="text-center md-3">{{title}}</h1>

<form action="/friends" method="POST" class="mb-4">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" class="form-control">

    </div>
    <div class="form-group">
        <label for="number">Number</label>
        <input type="text" name="number" class="form-control">

    </div>
    <div class="form-group">
        <label for="birthday">Birthday</label>
        <input type="text" name="birthday" class="form-control">

    </div>
    <div class="form-group">
        <label for="region">Region</label>
        <input type="text" name="region" class="form-control">

    </div>
    <input type="submit" value="Add Friend" class="btn btn-primary btn-block">

</form>


<h4>friends</h4>
<ul class="list-group">
    {{#each friends}}
        <li class="list-group-item">
         <p class="bold">Name: {{this.name}}</p>   
        <p class="bold">Number: {{this.number}}</p>   
        <p class="bold">Birthday: {{this.birthday}}</p>
        <p class="bold">Region: {{this.region}}</p>
        <form action="/{{this._id}}" method="post">
            <input type="submit" value="Delete" class="btn btn-danger">
        </form>
        
        
        </li>
    {{/each}}
</ul>